    "root=Tk()\n",
    "root.title(\"login page\")\n",
    "root.geometry(\"300x300\")\n",
    "#root.resizable(0,0)\n",
    "f0=Frame(root,bg='Turquoise')\n",
    "f0.pack(side=TOP,expand=TRUE,fill=BOTH)\n",
    "l0=Label(f0,text='LoginPage',bg='White',fg='cyan',font=30)\n",
    "l0.pack(side=LEFT,expand=TRUE)\n",
    "f1=Frame(root,bg='White')\n",
    "f1.pack(side=TOP,expand=TRUE)\n",
    "l=Label(f1,text='Email id',bg=\"white\",fg='red')\n",
    "l.pack(side=LEFT,expand=TRUE)\n",
    "e1=Entry(f1,bg=\"White\")\n",
    "e1.pack(side=RIGHT)\n",
    "f2=Frame(root,bg=\"White\")\n",
    "f2.pack(side=TOP,expand=TRUE)\n",
    "l1=Label(f2,text='Password',bg=\"White\",fg='red')\n",
    "l1.pack(side=LEFT,expand=TRUE)\n",
    "e2=Entry(f2,bg='White',show='*')\n",
    "e2.pack(side=RIGHT)\n",
    "b1=Button(root,text='Submit',fg='orange',font=20,bd=20)\n",
    "b1.pack(side=BOTTOM,expand=TRUE)\n",
    "\n",
    "\n",
    "root.mainloop()"
